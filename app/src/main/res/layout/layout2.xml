<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3B3B3"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This activity demonstrates the us of Grid Layout with embedded image views"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:rowCount="2">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:background="@drawable/shape"
            android:cropToPadding="true"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/forum_active" />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:background="@drawable/shape"
            android:cropToPadding="true"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/facebook_active"
            />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:background="@drawable/shape"
            android:cropToPadding="true"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/website_active"
             />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:background="@drawable/shape"
            android:cropToPadding="true"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/youtube_active"
             />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>